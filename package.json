{
  "name": "side-note",
  "displayName": "Side Note",
  "description": "Access commonly used files in your editor",
  "publisher": "WildBytes",
  "icon": "icon.jpeg",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Side Note",
      "properties": {
        "storage.path": {
          "type": "string",
          "default": "",
          "description": "Path to the directory for all notes."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "SideNote",
          "title": "Side Notes",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "SideNote": [
        {
          "id": "SideNoteView",
          "name": "",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "sideNote.createFile",
          "group": "navigation",
          "when": "view == SideNoteView"
        },
        {
          "command": "sideNote.deleteFile",
          "group": "navigation",
          "when": "view == SideNoteView"
        },
        {
          "command": "sideNote.renameFile",
          "group": "navigation",
          "when": "view == SideNoteView"
        },
        {
          "command": "sideNote.refreshView",
          "group": "navigation",
          "when": "view == SideNoteView"
        }
      ]
    },
    "commands": [
      {
        "command": "sideNote.createFile",
        "title": "Create New Side Note",
        "icon": {
          "light": "resources/light/create.svg",
          "dark": "resources/dark/create.svg"
        }
      },
      {
        "command": "sideNote.deleteFile",
        "title": "Delete Side Note",
        "icon": {
          "light": "resources/light/trash.svg",
          "dark": "resources/dark/trash.svg"
        }
      },
      {
        "command": "sideNote.renameFile",
        "title": "Rename Side Note",
        "icon": {
          "light": "resources/light/rename.svg",
          "dark": "resources/dark/rename.svg"
        }
      },
      {
        "command": "sideNote.refreshView",
        "title": "Refresh Side Notes",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
